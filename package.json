    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "1.2.8",
    "bcryptjs": "3.0.3",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "cmdk": "1.1.1",
    "date-fns": "4.1.0",
    "drizzle-kit": "0.31.7",
    "drizzle-orm": "0.44.7",
    "email-reply-parser": "2.3.4",
